<h1>Listing experts</h1>

<table>
  <thead>
    <tr>
      <th>Handle</th>
      <th>Tweet category</th>
      <th>Sequence</th>
      <th>User</th>
      <th>Is active</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @experts.each do |expert| %>
      <tr>
        <td><%= expert.handle %></td>
        <td><%= expert.tweet_category_id %></td>
        <td><%= expert.sequence_id %></td>
        <td><%= expert.user_id %></td>
        <td><%= expert.is_active %></td>
        <td><%= link_to 'Show', expert %></td>
        <td><%= link_to 'Edit', edit_expert_path(expert) %></td>
        <td><%= link_to 'Destroy', expert, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Expert', new_expert_path %>
